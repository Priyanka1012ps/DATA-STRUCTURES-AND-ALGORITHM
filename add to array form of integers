class Solution {
public:
    vector<int> addToArrayForm(vector<int>& num, int k) {
      int kNum, i = num.size()-1;
      while(k!=0)
      {
          if(i<0) {num.insert(num.begin(),1,0); i++;}
		  
          kNum = num[i] + (k%10);
          num[i] = kNum%10;
          k/=10;
          k+=kNum/10;
          i--;
      }
    return num;
    }
};
